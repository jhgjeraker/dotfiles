client.focused          $bg-light   $bg-light   $fg     $bg         $accent
client.focused_inactive $bg-light   $bg-light   $fg     $bg         $bg-dark
client.unfocused        $bg-dark    $bg-dark    $fg     $bg         $bg-dark
client.urgent           $bg-dark    $bg-dark    $fg     $bg         $bg-dark
client.placeholder      $bg-dark    $bg-dark    $fg     $bg         $bg-dark

